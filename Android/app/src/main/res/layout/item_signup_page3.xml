<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="학과정보와 성별을 입력해주세요."
            android:textColor="#2f2f2f"
            android:textSize="16sp"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="#2f2f2f"
            android:text="학과정보와 성별은\n랭킹시스템에 이용됩니다."/>




        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|right"
                    android:textSize="14sp"
                    android:textColor="#2f2f2f"
                    android:text="단과대학 : "/>

                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/spn_signup_college"
                    android:spinnerMode="dropdown"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:entries="@array/ku_college"
                    android:layout_height="wrap_content">

                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|right"
                    android:textSize="14sp"
                    android:textColor="#2f2f2f"
                    android:text="학과 : "/>

                <Spinner
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                    android:id="@+id/spn_signup_college2"
                    android:layout_height="wrap_content">

                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|right"
                    android:textSize="14sp"
                    android:textColor="#2f2f2f"
                    android:text="성별 : "/>

                <RadioGroup
                    android:id="@+id/rg_signup_sex"
                    android:checkedButton="@+id/rb_signup_sex_1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb_signup_sex_1"
                        android:text="남"
                        android:buttonTint="@color/colorAccent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rb_signup_sex_2"
                        android:text="여"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:id="@+id/rb_signup_sex_3"
                        android:text="기타"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:buttonTint="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RadioGroup>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>